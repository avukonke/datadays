generalOptions:
	title: General Settings
	menu-title: General Settings
	tabs:
		general:
			title:     General Setting
			tab-title: General
			options:
				Header: section
				#################
				logo_img:
					label: Logo image
					type: image-url
					default: 'design/img/foocamp-logo.png'
					skinable: false
				topBarContact:
					label: Tagline
					type: text
					default: Great Wordpress Conference Theme
				Comments: section
				#################
				closeComments:
					label: Closeable comments
					type: checkbox
					default:
						enable:
							label: 'Yes'
							checked: true
				defaultPosition:
					label: "Comments position"
					type: select
					default:
						opened:
							label: "Opened"
							checked: true
						closed:
							label: "Closed"
				Footer: section
				#################
				footer_text:
					label: Footer text
					type: wysiwyg
					default: '&copy; 2013 Copyright by <strong>AIT</strong>. Lorem ipsum dolor sit amet...'
				Google Codes: section
				#################
				ga_code:
					label: Google Analytics Tracking Code
					type: text
		sections:
			title: Sections
			tab-title: Sections
			options:
				Global sections order: section
				#######################
				sectionsOrder:
					type: order
					meta: '_ait_sections_order'
					default:
						sectionA: Section A - Countdown
						sectionB: Section B - Static Text
						sectionC: Section C - Content
				Slider - Global Settings : section
				#################
				sliderEnable:
					label: Show
					type: radio
					default:
						true:
							label: 'Yes'
						false:
							label: 'No'
							checked: true
				sliderAliases:
					label: Revolution slider
					type: dropdown-slider-aliases
					default: default-slider
				sliderAlternativeMobile:
					label: Mobile Slider alternative
					type: image-url
					default: 'design/img/mobile-bg.png'
				sliderAlternativeTablet:
					label: Tablet Slider alternative
					type: image-url
					default: 'design/img/ipad-bg.png'
				Circular Countdown - Global Settings : section
				#################
				countdownEnable:
					label: Show
					type: radio
					default:
						true:
							label: 'Yes'
						false:
							label: 'No'
							checked: true
				countdownStartDate:
					label: 'Start date'
					type: text
					default: '1 March 2013 12:00:00'
				countdownEndDate:
					label: 'End date'
					type: text
					default: '24 December 2013 08:00:00'
				daysHolder:
					label: 'Days Translation'
					type: text
					default: 'DAYS'
				hoursHolder:
					label: 'Hours Translation'
					type: text
					default: 'HOURS'
				minutesHolder:
					label: 'Minutes Translation'
					type: text
					default: 'MINUTES'
				secondsHolder:
					label: 'Seconds Translation'
					type: text
					default: 'SECONDS'
				countdownColor:
					label: Countdown color
					type: colorpicker
					default: '#20BAE2'
				countdownText:
					label: 'End date'
					type: textarea
					default: 'YES! We Launched. :)'
				Static Text - Global Settings : section
				#################
				staticTextEnable:
					label: Show
					type: radio
					default:
						true:
							label: 'Yes'
						false:
							label: 'No'
							checked: true
				staticText:
					label: ''
					type: textarea
					default: '<span class="block">Meet the people / share knowledge / learn new things</span><strong>Weâ€™re looking forward to see you!</strong>'
				staticTextColor:
					label: Font Color
					type: colorpicker
					default: '#b463ac'
		footer:
			title:     Footer Settings
			tab-title: Footer Widgets
			less: true
			options:
				Footer - Widgets : section
				#################
				widthFirst:
					label: "First Widget Width"
					type: text
					skinable: true
					default: 320px
				widthSecond:
					label: "Second Widget Width"
					type: text
					skinable: true
					default: 300px
				widthThird:
					label: "Third Widget Width"
					type: text
					skinable: true
					default: 220px
				widthFourth:
					label: "Fourth Widget Width"
					type: text
					skinable: true
					default: 257px
				widthFifth:
					label: "Fifth Widget Width"
					type: text
					skinable: true
					default: 202px
				widthSixth:
					label: "Sixth Widget Width"
					type: text
					skinable: true
					default: 202px
		socialIcons:
			title: Social icons
			tab-title: Social icons
			options:
				"Icons": section-title
				displayIcons:
					label: Display social icons
					type: checkbox
					default:
						display:
							label: "Yes"
							checked: true
				icons:
