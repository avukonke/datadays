appearance:
	title:     Appearance Settings
	menu-title: Appearance
	tabs:
		colors:
			title:     Colors & Backgrounds
			tab-title: Colors & Backgrounds
			less: true
			options:
				Background: section
				#################
				htmlBgColor:
					label: Site Background Color
					type: colorpicker
					default: '#ffffff'
				htmlBg:
					label: Site Background Image
					type: image-url
				htmlBgY:
					label: Vertical Position
					type: select
					default: {
						top: {
							label: Top
							checked: true
						},
						center: {
							label: Center
						},
						bottom: {
							label: Bottom
						}
					}
				htmlBgX:
					label: Horizontal Position
					type: select
					default: {
						left: {
							label: Left
							checked: true
						},
						center: {
							label: Center
						},
						right: {
							label: Right
						}
					}
				htmlBgRepeat:
					label: Repeat
					type: select
					default: {
						no-repeat: {
							label: No Repeat
						},
						repeat: {
							label: Repeat
							checked: true
						},
						repeat-x: {
							label: Repeat X
						},
						repeat-y: {
							label: Repeat Y
						}
					}
				htmlBgAttach:
					label: Scroll the background?
					type: radio
					default:
						scroll:
							label: 'Yes'
							checked: true
						fixed:
							label: 'No'
				headerBgColor:
					label: Header Background Color
					type: colorpicker
					default: '#b463ac'
				headerBgImg:
					label: Header Background Image
					type: image-url
					default: 'design/img/header-bg.png'
				footerBgColor:
					label: Footer Background Color
					type: colorpicker
					default: '#f9f9f9'
				Website Decoration: section
				#################
				decorColor:
					label: First Decoration Color
					type: colorpicker
					default: '#1fbae2'
				secondDecorColor:
					label: Second Decoration Color
					type: colorpicker
					default: '#b463ac'
				linesColor:
					label: Lines Color
					type: colorpicker
					default: '#dcdcdc'
		fonts:
			title:     Fonts
			tab-title: Fonts
			less: true
			options:
				Font colors: section
				#################
				generalFontColor:
					label:  General Text Color
					type: colorpicker
					default: '#444444'
				mainTitleFontColor:
					label:  Main Title Color
					type: colorpicker
					default: '#444444'
				titlesFontColor:
					label:  Titles Font Color
					type: colorpicker
					default: '#444444'
				menusFontColor:
					label: Menu Font Color
					type: colorpicker
					default: '#FFFFFF'
				menusActiveFontColor:
					label: Menu Active Font Color
					type: colorpicker
					default: '#1fbae2'
				linksFontColor:
					label: Links Font Color
					type: colorpicker
					default: '#1fbae2'
				Footer Widget colors: section
				#################
				footerTitlesFontColor:
					label:  Footer Titles Colors
					type: colorpicker
					default: '#444444'
				footerTextFontColor:
					label:  Footer Text Color
					type: colorpicker
					default: '#777777'
				footerLinksFontColor:
					label:  Footer Links Color
					type: colorpicker
					default: '#1fbae2'
		customCss:
			title: Custom CSS
			tab-title: Custom CSS
			options:
				Your custom CSS: section
				########################
				customCss:
					type: custom-css
					default: '/* your custom CSS in LESS syntax */'
				LESS variables for images: section
				########################
				customImages:
					type: custom-css-vars
					default: [
						[
							variable: {
								label: Image name
								type: text
							},
							value: {
								label: Image
								type: image-url
							}
						]
					]